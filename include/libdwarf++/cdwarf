#ifndef LIBDWARFPP_CDWARF_HH
# define LIBDWARFPP_CDWARF_HH

namespace dwarf {
extern "C" {
# include <libdwarf/dwarf.h>
# include <libdwarf/libdwarf.h>
}
};

namespace Dwarf {
    using Unsigned  = dwarf::Dwarf_Unsigned;
    using Signed    = dwarf::Dwarf_Signed;
    using Half      = dwarf::Dwarf_Half;
    using Small     = dwarf::Dwarf_Small;
    using Handler   = dwarf::Dwarf_Handler;
    using Ptr       = dwarf::Dwarf_Ptr;
    using Addr      = dwarf::Dwarf_Addr;
    using Off       = dwarf::Dwarf_Off;
    using Bool      = dwarf::Dwarf_Bool;
    using Block     = dwarf::Dwarf_Block;
    using Locdesc   = dwarf::Dwarf_Locdesc;
    using Loc       = dwarf::Dwarf_Loc;
};

#endif /* !LIBDWARFPP_CDWARF_HH */
